import random
l=[]
for i in range(100):
rand=random.randint(0,1)
l.append(rand)
print(l)
c=0
max_c=0
for i in range(0,len(l)):
if l[i]==0:
c+=1
else:
if c&gt;max_c:
max_c=c
c=0
print(max_c)

